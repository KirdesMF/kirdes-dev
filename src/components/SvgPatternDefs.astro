<svg aria-hidden="true" focusable="false" class="pointer-events-none absolute w-0 h-0">
	<defs>
		<pattern
			id="pattern-frame-striped"
			patternUnits="userSpaceOnUse"
			width="8"
			height="8"
			patternTransform="rotate(-45)"
		>
			<rect width="8" height="8" fill="transparent"></rect>
			<line x1="0" y1="0" x2="0" y2="8" stroke="currentColor" stroke-width="0.75"></line>
		</pattern>

		<pattern
			id="pattern-frame-striped-wireframe"
			patternUnits="userSpaceOnUse"
			width="8"
			height="8"
			patternTransform="rotate(-45)"
		>
			<rect width="8" height="8" fill="transparent"></rect>
			<line x1="0" y1="0" x2="0" y2="8" stroke="currentColor" stroke-width="0.75" stroke-dasharray="5 2"></line>
		</pattern>

		<pattern id="square-grid" x="0" y="0" width="10" height="10" patternUnits="userSpaceOnUse">
			<rect x="0" y="0" width="10" height="10" fill="none" stroke-width="0.75" class="stroke-foreground/5"></rect>
			<rect x="10" y="10" width="10" height="10" fill="none" stroke-width="0.75" class="stroke-foreground/5"></rect>
		</pattern>

		<!-- Motif de hachures diagonales -->
		<pattern id="hachures" x="0" y="0" width="5" height="5" patternUnits="userSpaceOnUse">
			<line x1="0" y1="0" x2="5" y2="5" stroke-width="0.75" stroke-dasharray="2 1" class="stroke-foreground/5"></line>
			<line x1="-2" y1="3" x2="3" y2="8" stroke-width="0.75" stroke-dasharray="2 1" class="stroke-foreground/5"></line>
			<line x1="3" y1="-2" x2="8" y2="3" stroke-width="0.75" stroke-dasharray="2 1" class="stroke-foreground/5"></line>
		</pattern>

		<!-- Motif principal : grille de carrés avec alternance -->
		<pattern id="checkerboard" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
			<!-- Carrés non hachurés (blancs) -->
			<rect
				x="0"
				y="0"
				width="10"
				height="10"
				fill="none"
				stroke-width="0.75"
				stroke-dasharray="2 2"
				class="stroke-foreground/5"
			></rect>
			<rect
				x="10"
				y="10"
				width="10"
				height="10"
				fill="none"
				stroke-width="0.75"
				stroke-dasharray="2 2"
				class="stroke-foreground/5"
			></rect>

			<!-- Carrés hachurés (alternés) -->
			<rect
				x="10"
				y="0"
				width="10"
				height="10"
				fill="url(#hachures)"
				stroke-width="0.75"
				stroke-dasharray="2 2"
				class="stroke-foreground/5"
			></rect>
			<rect
				x="0"
				y="10"
				width="10"
				height="10"
				fill="url(#hachures)"
				stroke-width="0.75"
				stroke-dasharray="2 2"
				class="stroke-foreground/5"
			></rect>
		</pattern>
	</defs>
</svg>
