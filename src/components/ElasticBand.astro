---
const lineCount = 10;
const viewBoxWidth = 120;
const viewBoxHeight = 100;
const centerX = viewBoxWidth / 2;
const amplitude = 0;

const bands = Array.from({ length: lineCount }, (_, index) => {
	const y = ((index + 1) * viewBoxHeight) / (lineCount + 1);
	return {
		y,
		controlY: y - amplitude,
	};
});
---

<svg
	viewBox={`0 0 ${viewBoxWidth} ${viewBoxHeight}`}
	preserveAspectRatio="none"
	class="size-full overflow-visible"
	role="img"
	aria-hidden="true"
>
	{
    bands.map(({ y, controlY }) => (
      <path
        d={`M 0 ${y} Q ${centerX} ${controlY} ${viewBoxWidth} ${y}`}
        fill="none"
        stroke="currentColor"
        stroke-width="5"
        stroke-linecap="round"
        vector-effect="non-scaling-stroke"
      />
    ))
  }
</svg>
