    <title>{title}</title>
    <ThemeScript />
  </head>
  <body class="bg-background text-foreground font-body font-light overflow-x-hidden">
    <Menu />
    <SvgPatternDefs />
    <GridRails />
    <Header />
    <slot />
  </body>
</html>
